# Flask настройки
FLASK_SECRET_KEY=change-me-to-random-secret-key
FLASK_DEBUG=0
PORT=5050

# GigaChat API (обязательно)
GIGACHAT_CREDENTIALS=your_gigachat_credentials_here

# Hugging Face API (опционально)
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# GitHub API (опционально, для GitHub tool)
GITHUB_TOKEN=your_github_personal_access_token_here

# PostgreSQL + pgvector для RAG (опционально)
DATABASE_URL=postgresql://user:password@localhost:5432/your_database
PGVECTOR_METRIC=cosine
TOP_K=8

# Ollama для эмбеддингов (опционально, для RAG)
OLLAMA_URL=http://localhost:11434
OLLAMA_EMBED_MODEL=nomic-embed-text

# Параметры индексов pgvector (опционально)
HNSW_EF_SEARCH=100
IVFFLAT_PROBES=10
